<ui:Window
    x:Class="BF1MarneTools.Windows.MapWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    x:Name="Window_Map"
    Title="战地1马恩服务器地图配置工具"
    Width="1280"
    Height="720"
    MinWidth="1280"
    MinHeight="720"
    Closing="Window_Map_Closing"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    Icon="/Assets/Icons/Favicon.ico"
    Loaded="Window_Map_Loaded"
    Style="{StaticResource SystemWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="275" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  游戏模式  -->
        <ListBox
            x:Name="ListBox_GameModeInfos"
            Margin="5"
            ItemsSource="{Binding GameModeInfos}"
            SelectionChanged="ListBox_GameModeInfos_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Height="35" ToolTip="{Binding Name2}">
                        <StackPanel Margin="5,0,5,0" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="12"
                                FontWeight="Bold"
                                Text="{Binding Name}" />
                            <TextBlock FontSize="10" Text="{Binding Code}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  地图列表  -->
        <ListBox
            x:Name="ListBox_GameMap2Infos"
            Grid.Column="1"
            Margin="0,5,5,5"
            ItemsSource="{Binding GameMap2Infos}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border ToolTip="{Binding Name2}">
                        <DockPanel Height="40">
                            <Border
                                Width="20"
                                Margin="5,0,10,0"
                                DockPanel.Dock="Left">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Background="#FED700"
                                    Text="{Binding Index}"
                                    TextAlignment="Center" />
                            </Border>
                            <!--  ////////////  -->
                            <ui:Image
                                Height="30"
                                DockPanel.Dock="Left"
                                Source="{Binding Image}"
                                Stretch="Uniform" />
                            <!--  ////////////  -->
                            <Border
                                Width="45"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right">
                                <TextBlock
                                    Padding="5"
                                    HorizontalAlignment="Right"
                                    Background="#2B7CD3"
                                    FontSize="10"
                                    Foreground="White"
                                    Text="{Binding DLC}"
                                    TextAlignment="Center" />
                            </Border>
                            <!--  ////////////  -->
                            <StackPanel Margin="10,0,5,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Text="{Binding Name}" />
                                <TextBlock FontSize="10" Text="{Binding Name3}" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <DockPanel Grid.Column="2">
            <DockPanel DockPanel.Dock="Bottom">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <ui:IconButton
                        Margin="0,0,5,5"
                        Command="{Binding AddMapCommand}"
                        Content="添加选中地图 (Add)"
                        Icon="&#xE710;"
                        IsEnabled="{Binding ElementName=ListBox_GameMap2Infos, Path=SelectedItem, Converter={StaticResource IsNullObject2Converter}}" />
                    <ui:IconButton
                        Margin="0,0,5,5"
                        Command="{Binding DelectMapCommand}"
                        Content="删除选中地图 (Delect)"
                        Icon="&#xE711;"
                        IsEnabled="{Binding ElementName=ListBox_GameMapModels, Path=SelectedItem, Converter={StaticResource IsNullObject2Converter}}" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <ui:IconButton
                        Margin="0,0,5,5"
                        Command="{Binding ClearMapListCommand}"
                        Content="清空地图列表 (Clear)"
                        Icon="&#xE74D;" />
                    <ui:IconButton
                        Margin="0,0,5,5"
                        Command="{Binding SaveDataCommand}"
                        Content="保存数据 (Save)"
                        Icon="&#xE74E;" />
                </StackPanel>
            </DockPanel>

            <ListBox
                x:Name="ListBox_GameMapModels"
                Margin="0,5,5,5"
                dd:DragDrop.DropHandler="{Binding}"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True"
                dd:DragDrop.UseDefaultDragAdorner="True"
                ItemsSource="{Binding GameMapModels}">
                <dd:DragDrop.DropTargetAdornerPen>
                    <Pen
                        Brush="{StaticResource Win11Blue}"
                        DashCap="Round"
                        Thickness="2" />
                </dd:DragDrop.DropTargetAdornerPen>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Height="40">
                            <DockPanel LastChildFill="False">
                                <DockPanel.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DockPanel.Resources>
                                <!--  ////////////  -->
                                <Border
                                    Width="20"
                                    Margin="5,0,10,0"
                                    DockPanel.Dock="Left">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Background="#FED700"
                                        Text="{Binding Index}"
                                        TextAlignment="Center" />
                                </Border>
                                <!--  ////////////  -->
                                <ui:Image
                                    Height="30"
                                    DockPanel.Dock="Left"
                                    Source="{Binding Image}"
                                    Stretch="Uniform" />
                                <!--  /////////////  -->
                                <Border
                                    Width="50"
                                    Margin="5,0,10,0"
                                    DockPanel.Dock="Right">
                                    <TextBlock
                                        Padding="5"
                                        HorizontalAlignment="Right"
                                        Background="#2B7CD3"
                                        FontSize="10"
                                        Foreground="White"
                                        Text="{Binding Dlc}"
                                        TextAlignment="Center" />
                                </Border>
                                <!--  /////////////  -->
                                <StackPanel
                                    Margin="0,0,5,0"
                                    DockPanel.Dock="Right"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Padding="5"
                                        Background="#43D42B"
                                        FontSize="10"
                                        Text="{Binding Code}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        Padding="5"
                                        Background="#CA64EA"
                                        FontSize="10"
                                        Foreground="White"
                                        Text="{Binding Mode2}" />
                                    <TextBlock
                                        Width="50"
                                        Margin="5,0,0,0"
                                        Text="{Binding Mode}" />
                                </StackPanel>
                                <!--  /////////////  -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="10,0,0,0" Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        Padding="5"
                                        Background="#21A366"
                                        FontSize="10"
                                        Foreground="White"
                                        Text="{Binding Name2}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        Padding="5"
                                        Background="#CA5100"
                                        FontSize="10"
                                        Foreground="White"
                                        Text="{Binding Name3}" />
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

    </Grid>

</ui:Window>